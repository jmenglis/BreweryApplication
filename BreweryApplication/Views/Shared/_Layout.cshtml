<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Where is that Brewery?</title>
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/Content/styles.css" rel="stylesheet" type="text/css" />
    <link type="text/css" rel="stylesheet" href="~/Content/materialize.min.css" media="screen,projection" />
</head>
<body>
    <nav>
        <div class="nav-wrapper">
            @Html.ActionLink("Find that Brewery!", "Index", "Home", new { area = "" }, new { @class = "brand-logo" }) 
            <a href="#" data-activates="mobile-time" class="button-collapse"><i class="material-icons">menu</i></a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
            </ul>
            <ul class="side-nav" id="mobile-time">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
            </ul>
        </div>
    </nav>
        @RenderBody()
    <script src="~/scripts/jquery-2.2.3.min.js"></script>
    <script type="text/javascript" src="~/scripts/materialize.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/react/15.0.2/react.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/react/15.0.2/react-dom.js"></script>
    <script type="text/javascript" src="~/scripts/app.js"></script>
</body>
</html>